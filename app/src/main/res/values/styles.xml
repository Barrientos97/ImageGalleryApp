<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Buttons -->
    <style name="PrimaryButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/ButtonTextStyle</item>
        <item name="android:background">@drawable/primary_button_shape</item>
    </style>

    <style name="ButtonTextStyle">
        <item name="android:textSize">@dimen/text_size_h2</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SecondaryButtonStyle_Acept" parent="Widget.MaterialComponents.Button.TextButton">>
        <item name="android:textColor">#5E4C88</item>
        <item name="android:textAppearance">@style/ButtonTextStyle_pop</item>
    </style>

    <style name="ButtonTextStyle_pop">
        <item name="android:textSize">@dimen/layout_small_normal_extra</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="PrimaryTextHintStyle">
        <item name="android:textColor">@color/text_secondary_color</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/text_size_h3</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
</resources>